package com.bs.practice.func;
import java.util.Scanner;

public class OperatorPractice {
	public void practice1() {
		Scanner sc=new Scanner(System.in);
		System.out.print("정수 : ");
		int num=sc.nextInt();
		System.out.println(num>0?"양수다":"양수가 아니다");
				
	}

	public void practice2() {
		Scanner sc=new Scanner(System.in);
		System.out.print("정수 : ");
		int num=sc.nextInt();
		System.out.println(num>0?"양수다":num==0?"0이다":"음수다");
				
	}
	
	public void practice3() {
		Scanner sc=new Scanner(System.in);
		System.out.print("정수 : ");
		int num=sc.nextInt();
		System.out.println(num%2==0?"짝수다":"홀수다");
		
	}
	
	public void practice4() {
		Scanner sc=new Scanner(System.in);
		System.out.print("인원수 : ");
		int people=sc.nextInt();
		System.out.print("사탕 개수 : ");
		int candy=sc.nextInt();
		System.out.println("1인당 사탕 개수 : "+people/candy+"\n"+"남는 사탕 개수 : "+people%candy);
		
	}
}
